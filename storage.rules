rules_version = '2';

// Firebase Storage security rules
service firebase.storage {
  // CORS headers for web support
  match /b/{bucket}/o {
    allow read: if true; // Public read access for all files
    
    // Web CORS headers
    function addCorsHeaders() {
      return {
        'Access-Control-Allow-Origin': '*',
        'Access-Control-Allow-Methods': 'GET, POST, PUT, DELETE, OPTIONS',
        'Access-Control-Allow-Headers': 'Content-Type, Authorization'
      };
    }
    // Business logos - only authenticated business owners can upload/update
    match /business_logos/{allPaths=**} {
      allow read: if true; // Public read for logos
      allow write: if request.auth != null && isBusinessOwner();
    }
    
    // Product images - only business owners/staff can upload
    match /product_images/{businessId}/{allPaths=**} {
      allow read: if true; // Public read for product images
      allow write: if request.auth != null && isBusinessMember(businessId);
    }
    
    // QR codes - only business owners can upload
    match /qr_codes/{businessId}/{allPaths=**} {
      allow read: if true; // Public read for QR codes
      allow write: if request.auth != null && isBusinessMember(businessId);
    }
    
    // General business files
    match /businesses/{businessId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if request.auth != null && isBusinessMember(businessId);
    }
    
    // Waiter profile images - only business members can upload
    match /waiter_profiles/{businessId}/{waiterId}/{allPaths=**} {
      allow read: if true; // Public read for waiter profile images
      allow write: if request.auth != null && isBusinessMember(businessId) && isValidImage();
    }
    
    // Customer profile images - only the customer can upload their own
    match /customer_profiles/{userId}/{allPaths=**} {
      allow read: if true; // Public read for customer profile images
      allow write: if request.auth != null && request.auth.uid == userId && isValidImage();
    }
    
    // Menu videos and media - only business members can upload
    match /menu_media/{businessId}/{allPaths=**} {
      allow read: if true; // Public read for menu media
      allow write: if request.auth != null && isBusinessMember(businessId) && isValidMedia();
    }
    
    // Background images - only business members can upload
    match /background_images/{businessId}/{allPaths=**} {
      allow read: if true; // Public read for background images
      allow write: if request.auth != null && isBusinessMember(businessId) && isValidImage();
    }
    
    // Helper functions
    function isBusinessOwner() {
      return request.auth != null && request.auth.uid != null;
    }
    
    function isBusinessMember(businessId) {
      return request.auth != null && request.auth.uid != null;
    }
    
    // File size and type validation
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 && // 5MB limit
             request.resource.contentType.matches('image/.*');
    }
    
    function isValidMedia() {
      return request.resource.size < 50 * 1024 * 1024 && // 50MB limit for videos
             (request.resource.contentType.matches('image/.*') ||
              request.resource.contentType.matches('video/.*'));
    }
    
    // Default allow for authenticated users (simplified for now)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 