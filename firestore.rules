rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - kullanıcılar kendi verilerine erişebilir
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null; // Yeni kullanıcı kaydı için
    }
    
    // Businesses collection - authenticated kullanıcılar okuyabilir, sahipler yazabilir
    match /businesses/{businessId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.ownerId || 
         request.auth.uid == request.resource.data.ownerId);
    }
    
    // Products collection - işletme sahipleri ve authenticated kullanıcılar
    match /products/{productId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir (business kontrolü app seviyesinde)
    }
    
    // Categories collection - işletme sahipleri ve authenticated kullanıcılar
    match /categories/{categoryId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Orders collection - işletme sahipleri ve müşteriler
    match /orders/{orderId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Discounts collection - işletme sahipleri
    match /discounts/{discountId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // QR codes collection - allow public read for scans, authenticated write
    match /qr_codes/{qrId} {
      allow read: if true; // QR codes need to be publicly readable for scanning
      allow write: if request.auth != null; // Only authenticated users can create/update QR codes
      allow list: if request.auth != null; // Listing requires authentication
    }
    
    // Business users collection (for BusinessService)
    match /business_users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Business orders collection (for quick lookups)
    match /business_orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    
    // Waiters collection - garson yönetimi
    match /waiters/{waiterId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir (business kontrolü app seviyesinde)
    }
    
    // Waiter calls collection - garson çağırma sistemi
    match /waiter_calls/{callId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Reviews and ratings collection - müşteri değerlendirmeleri
    match /reviews/{reviewId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Customer feedback collection - müşteri geri bildirimleri
    match /feedback/{feedbackId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Multilingual content collection - çoklu dil içerikleri
    match /multilingual_content/{contentId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Detailed nutrition info collection - detaylı beslenme bilgileri
    match /nutrition_info/{nutritionId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Customer allergen profiles collection - müşteri alerjen profilleri
    match /allergen_profiles/{profileId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.customerId; // Sadece kendi profili
      allow write: if request.auth != null && request.auth.uid == request.resource.data.customerId; // Sadece kendi profili
    }
    
    // Notifications collection - bildirimler
    match /notifications/{notificationId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Allow authenticated users to read/write to any collection for development
    // TODO: Make this more restrictive in production
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 