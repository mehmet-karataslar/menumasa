rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin users collection - allow read/write for authenticated users
    match /admin_users/{adminId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Admin sessions collection - allow read/write for authenticated users
    match /admin_sessions/{sessionId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Admin activity logs collection - allow read/write for authenticated users
    match /admin_activity_logs/{logId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Business users collection - allow read/write for authenticated users
    match /business_users/{businessId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Business sessions collection - allow read/write for authenticated users
    match /business_sessions/{sessionId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Business activity logs collection - allow read/write for authenticated users
    match /business_activity_logs/{logId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Users collection - allow read/write for authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Businesses collection - allow public read, authenticated write
    match /businesses/{businessId} {
      allow read: if true; // Müşteriler işletmeleri görebilir
      allow write: if request.auth != null; // Sadece kimlik doğrulanmış kullanıcılar yazabilir
      allow list: if true; // İşletme listesi herkese açık
    }
    
    // Categories collection - allow public read, authenticated write
    match /categories/{categoryId} {
      allow read: if true; // Müşteriler kategorileri görebilir
      allow write: if request.auth != null; // Sadece kimlik doğrulanmış kullanıcılar yazabilir
      allow list: if true; // Kategori listesi herkese açık
    }
    
    // Products collection - allow public read, authenticated write
    match /products/{productId} {
      allow read: if true; // Müşteriler ürünleri görebilir
      allow write: if request.auth != null; // Sadece kimlik doğrulanmış kullanıcılar yazabilir
      allow list: if true; // Ürün listesi herkese açık
    }
    
    // Orders collection - allow read/write for authenticated users only
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Carts collection - allow more flexible access for guest users
    match /carts/{cartId} {
      allow read, write: if true; // Misafir kullanıcılar da sepet oluşturabilir
      allow list: if request.auth != null; // Listeleme sadece kimlik doğrulanmış kullanıcılar için
    }
    
    // Discounts collection - allow public read, authenticated write
    match /discounts/{discountId} {
      allow read: if true; // Müşteriler indirimleri görebilir
      allow write: if request.auth != null; // Sadece kimlik doğrulanmış kullanıcılar yazabilir
      allow list: if true; // İndirim listesi herkese açık
    }
    
    // QR codes collection - allow public read for scans, authenticated write
    match /qr_codes/{qrId} {
      allow read: if true; // QR codes need to be publicly readable for scanning
      allow write: if request.auth != null; // Only authenticated users can create/update QR codes
      allow list: if request.auth != null; // Listing requires authentication
    }
    
    // System settings collection - allow read/write for authenticated users
    match /system_settings/{settingId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 