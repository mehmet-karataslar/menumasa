rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - kullanıcılar kendi verilerine erişebilir
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null; // Yeni kullanıcı kaydı için
    }
    
    // Businesses collection - authenticated kullanıcılar okuyabilir, sahipler yazabilir
    match /businesses/{businessId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.ownerId || 
         request.auth.uid == request.resource.data.ownerId);
    }
    
    // Products collection - işletme sahipleri ve authenticated kullanıcılar
    match /products/{productId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir (business kontrolü app seviyesinde)
    }
    
    // Categories collection - işletme sahipleri ve authenticated kullanıcılar
    match /categories/{categoryId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Orders collection - işletme sahipleri ve müşteriler
    match /orders/{orderId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Discounts collection - işletme sahipleri
    match /discounts/{discountId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Product Favorites collection - müşteriler kendi favorilerini yönetebilir
    match /product_favorites/{favoriteId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.customerId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.customerId;
      allow list: if request.auth != null; // Kendi favorilerini listeleyebilir
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.customerId;
    }
    
    // Business Favorites collection - müşteriler kendi işletme favorilerini yönetebilir
    match /business_favorites/{favoriteId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      allow list: if request.auth != null; // Kendi favorilerini listeleyebilir
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Customers collection - CustomerService için
    match /customers/{customerId} {
      allow read, write: if request.auth != null; // Authenticated kullanıcılar
      allow create: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // QR codes collection - allow public read for scans, authenticated write
    match /qr_codes/{qrId} {
      allow read: if true; // QR codes need to be publicly readable for scanning
      allow write: if request.auth != null; // Only authenticated users can create/update QR codes
      allow list: if request.auth != null; // Listing requires authentication
    }
    
    // Business users collection (for BusinessService)
    match /business_users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Business orders collection (for quick lookups)
    match /business_orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    
    // Waiters collection - garson yönetimi
    match /waiters/{waiterId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir (business kontrolü app seviyesinde)
    }
    
    // Waiter calls collection - garson çağırma sistemi
    match /waiter_calls/{callId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Reviews and ratings collection - müşteri değerlendirmeleri
    match /reviews/{reviewId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Customer feedback collection - müşteri geri bildirimleri
    match /feedback/{feedbackId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Multilingual content collection - çoklu dil içerikleri
    match /multilingual_content/{contentId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Detailed nutrition info collection - detaylı beslenme bilgileri
    match /nutrition_info/{nutritionId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Customer allergen profiles collection - müşteri alerjen profilleri
    match /allergen_profiles/{profileId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.customerId; // Sadece kendi profili
      allow write: if request.auth != null && request.auth.uid == request.resource.data.customerId; // Sadece kendi profili
    }
    
    // Notifications collection - bildirimler
    match /notifications/{notificationId} {
      allow read: if request.auth != null; // Authenticated kullanıcılar okuyabilir
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
    }
    
    // Staff collection - personel yönetimi
    match /staff/{staffId} {
      allow read: if true; // Personel girişi için public read gerekli
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
      allow list: if request.auth != null; // Liste için authentication gerekli
    }
    
    // Admin users collection - admin kullanıcıları
    match /admin_users/{adminId} {
      allow read: if true; // Admin girişi için public read gerekli
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
      allow list: if request.auth != null; // Liste için authentication gerekli
    }
    
    // Admin sessions collection - admin oturumları
    match /admin_sessions/{sessionId} {
      allow read, write: if request.auth != null; // Authenticated kullanıcılar
    }
    
    // Admin activity logs collection - admin aktivite logları
    match /admin_activity_logs/{logId} {
      allow read, write: if request.auth != null; // Authenticated kullanıcılar
    }
    
    // Business sessions collection - business oturumları
    match /business_sessions/{sessionId} {
      allow read, write: if request.auth != null; // Authenticated kullanıcılar
    }
    
    // Business activity logs collection - business aktivite logları
    match /business_activity_logs/{logId} {
      allow read, write: if request.auth != null; // Authenticated kullanıcılar
    }
    
    // Customer users collection - müşteri kullanıcıları
    match /customer_users/{customerId} {
      allow read: if true; // Müşteri girişi için public read gerekli
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
      allow list: if request.auth != null; // Liste için authentication gerekli
    }
    
    // Customer sessions collection - müşteri oturumları
    match /customer_sessions/{sessionId} {
      allow read, write: if request.auth != null; // Authenticated kullanıcılar
    }
    
    // Customer activity logs collection - müşteri aktivite logları
    match /customer_activity_logs/{logId} {
      allow read, write: if request.auth != null; // Authenticated kullanıcılar
    }
    
    // Customer favorites collection - müşteri favorileri
    match /customer_favorites/{favoriteId} {
      allow read, write: if request.auth != null; // Authenticated kullanıcılar
    }
    
    // Customer orders collection - müşteri siparişleri
    match /customer_orders/{orderId} {
      allow read, write: if request.auth != null; // Authenticated kullanıcılar
    }
    
    // Customer profiles collection - müşteri profilleri
    match /customer_profiles/{profileId} {
      allow read, write: if request.auth != null; // Authenticated kullanıcılar
    }
    
    // Cart collection - sepet verileri
    match /carts/{cartId} {
      allow read, write: if true; // Sepet için public erişim (guest kullanıcılar için)
    }
    
    // Sessions collection - genel oturum yönetimi
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null; // Authenticated kullanıcılar
    }
    
    // Guest sessions collection - misafir oturumları
    match /guest_sessions/{sessionId} {
      allow read, write: if true; // Misafir kullanıcılar için public erişim
    }
    
    // Businesses collection - işletme bilgileri
    match /businesses/{businessId} {
      allow read: if true; // Public read için QR menü erişimi
      allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
      
      // Business subcollections - işletme alt koleksiyonları
      match /products/{productId} {
        allow read: if true; // Public read için menü erişimi
        allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
      }
      
      match /categories/{categoryId} {
        allow read: if true; // Public read için menü erişimi
        allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
      }
      
      match /discounts/{discountId} {
        allow read: if true; // Public read için menü erişimi
        allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
      }
      
      match /staff/{staffId} {
        allow read: if true; // Public read için personel erişimi
        allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
      }
      
      match /orders/{orderId} {
        allow read: if true; // Public read için sipariş erişimi
        allow write: if request.auth != null; // Authenticated kullanıcılar yazabilir
      }
    }
    
    // Waiter calls collection - garson çağrıları
    match /waiter_calls/{callId} {
      allow read, write: if true; // Public erişim (guest kullanıcılar için)
    }
    
    // Allow authenticated users to read/write to any collection for development
    // TODO: Make this more restrictive in production
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 